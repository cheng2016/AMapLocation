<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_55"
    android:background="@color/app_background">

    <FrameLayout
        android:id="@+id/back_layout"
        android:layout_width="@dimen/widget_size_50"
        android:layout_height="@dimen/widget_size_50"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/widget_size_15"
            android:layout_height="@dimen/widget_size_23"
            android:layout_gravity="center"
            android:background="@mipmap/btn_code_back"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <FrameLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/widget_size_50"
        android:layout_height="@dimen/widget_size_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="@dimen/widget_size_6"
            android:layout_height="@dimen/widget_size_23"
            android:layout_gravity="center"
            android:background="@mipmap/btn_more" />
    </FrameLayout>
</RelativeLayout>